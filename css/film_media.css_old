@media only screen and (min-device-width: 300px) {
  #add_comment_field {
    width: 280px;
    height: 100px;
  }
}

@media only screen and (min-device-width: 600px) {
  #add_comment_field {
    width: 500px;
    height: 100px;
  }
  .watcher_comment_box {
    background-color: white;
    border: 1px solid black;
    padding-left: 10px;
    padding-right: 10px;
    margin-bottom: 10px;
    font-size: 17px;
    font-family: sans-serif;
    width: 500px;
  }
}

@media only screen and (min-device-width: 900px) {
}

@media only screen and (min-device-width: 1200px) {
  .video_page_container {
    display: flex;
    flex-direction: row;
    gap: 30px;
  }

  .video_page_container_left {
    flex: 3;
  }

  .video_page_container_right {
    flex: 1;
  }

  .video_and_about {
    display: flex;
    flex-direction: row;
    gap: 30px;
  }

  .video_section {
    flex: 1;
  }

  .about_film {
    flex: 2;
  }

  .text_under_video {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
  }

  .watcher_comment_box {
    width: 450px;
  }
  
  #add_comment_field {
    width: 450px;
  }
}
